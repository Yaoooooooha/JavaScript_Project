<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/headInfo") %>
    <title>註冊會員</title>
  </head>
  <body>
    <%- include ("partials/backgroundImg") %>
    <section class="header">
      <%- include ("partials/header") %> <%- include ("partials/nav") %>
    </section>
    <main>
      <section class="signup-squre">
        <h2>註冊</h2>
        <form action="/auth/signup" method="POST">
          <div class="form-group">
            <label for="exampleUsername">姓名：</label>
            <input
              name="name"
              type="text"
              minlength="2"
              maxlength="100"
              required
            />
          </div>
          <div class="form-group">
            <label for="userEmail">信箱：</label>
            <input type="email" name="username" maxlength="100" required />
          </div>
          <div class="form-group">
            <label for="userPassword">密碼：</label>
            <input
              type="password"
              name="password"
              maxlength="100"
              minlength="8"
              required
            />
          </div>
          <%- include ("partials/message") %>
          <br />
          <div class="form-group">
            <button type="submit" class="btn btn-primary">送出</button>
          </div>
        </form>
      </section>
    </main>
    <%- include ("partials/footer") %>
  </body>
</html>
